<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp" >
    
    <ImageView 
        android:id="@+id/downloaded_iv"
        android:layout_width="72dp"
        android:layout_height="92dp"
        android:scaleType="centerCrop"
        android:src="@drawable/usericon_bg"/>

    <TextView
        android:id="@+id/downloaded_title_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_toRightOf="@id/downloaded_iv"
        android:singleLine="true"
        android:text="title"
        android:textSize="17sp" />
    
    <TextView 
        android:id="@+id/downloaded_size_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/downloaded_title_item"
        android:layout_alignLeft="@id/downloaded_title_item"
        android:layout_marginTop="4dp"
        android:textSize="12sp"
        android:text="大小："/>
    
    <TextView 
        android:id="@+id/downloaded_source_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/downloaded_size_item"
        android:layout_alignLeft="@id/downloaded_size_item"
        android:layout_marginTop="4dp"
        android:textSize="12sp"
        android:text="作者："/>
    
    <TextView 
        android:id="@+id/downloaded_time_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/downloaded_source_item"
        android:layout_alignLeft="@id/downloaded_source_item"
        android:layout_marginTop="4dp"
        android:textSize="12sp"
        android:text="上次已播放到2分钟/共10分钟"/>
    
    
    

    

</RelativeLayout>