<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="72dp" >

        <ImageView
            android:id="@+id/new_tow_back"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginLeft="12dp"
            android:layout_centerVertical="true"
            android:src="@drawable/login_back"
            android:clickable="true" />

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="#D1D1D1"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/new_two_find"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:background="@drawable/corners_left_bg_red"
                android:gravity="center"
                android:padding="7dp"
                android:textSize="17dp"
                android:text="@string/find"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/new_two_ranking"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:background="@drawable/corners_right_bg_white"
                android:gravity="center"
                android:padding="7dp"
                android:textSize="17dp"
                android:text="@string/ranking" />
        </LinearLayout>
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/new_two_frameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </FrameLayout>

</LinearLayout>