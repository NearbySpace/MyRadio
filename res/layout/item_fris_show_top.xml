<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
     >

    <RelativeLayout
        android:id="@+id/rel"
        android:layout_width="190dp"
        android:layout_height="120dp"
        android:layout_gravity="center_horizontal"
        android:padding="5dp" >

        <ImageView
            android:id="@+id/top_image"
            android:layout_width="190dp"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:src="@drawable/abc_list_focused_holo" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:layout_alignRight="@id/top_image"
            android:orientation="horizontal"
            android:background="#55444444"
            android:padding="3dp"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="12dp"
                android:src="@drawable/hear_small" />

            <TextView
                android:id="@+id/shoutin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text=" 4.00万"
                android:textColor="@color/white"
                android:textSize="10sp" />
        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/rel"
        android:layout_below="@+id/rel"
        android:orientation="vertical"
        android:layout_marginLeft="6dp" >

        <TextView
            android:id="@+id/top_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="970女主播"
             android:textSize="16sp"
             android:maxLines="2"
             android:textColor="@color/color_text_black" />

        <TextView
            android:id="@+id/compere"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="草莓女主播nicleo"
            android:textSize="13sp"
            android:textColor="@color/gray"
            android:layout_marginTop="2dp"
             />
    </LinearLayout>

</RelativeLayout>