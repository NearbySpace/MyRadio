<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_gray_light3"
    android:orientation="vertical" >

    <include layout="@layout/toolbar" />

    <com.example.toolbar.view.OverScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_gray_light3"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/setting_safe_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/text_color_selector"
                android:paddingBottom="12dp"
                android:paddingLeft="12dp"
                android:paddingRight="18dp"
                android:paddingTop="12dp" >

                <TextView
                    android:id="@+id/setting_password_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/text_color_selector"
                    android:clickable="true"
                    android:text="@string/setting_safe"
                    android:textSize="17sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/icon_more_setting" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/setting_program"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:background="@drawable/text_color_selector"
                android:clickable="true"
                android:orientation="horizontal"
                android:paddingBottom="12dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingTop="12dp" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="@string/default_program"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/setting_program_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="@string/default_program"
                    android:textSize="17sp" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/text_color_selector"
                android:layout_marginTop="12dp" >

                <TextView
                    android:id="@+id/setting_tv_update"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:background="@drawable/text_color_selector"
                    android:paddingBottom="12dp"
                    android:paddingLeft="12dp"
                    android:paddingTop="12dp"
                    android:text="@string/setting_update"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/setting_tv_vesion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:text="1.0" />
            </RelativeLayout>

            <TextView
                android:id="@+id/setting_exit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/text_color_selector"
                android:clickable="true"
                android:gravity="center_horizontal"
                android:paddingBottom="12dp"
                android:paddingTop="12dp"
                android:text="@string/setting_exit"
                android:textColor="@color/red"
                android:textSize="17sp" />
            <TextView 
                android:id="@+id/setting_location_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:clickable="true"
                android:text="定位"/>
        </LinearLayout>
    </com.example.toolbar.view.OverScrollView>

</LinearLayout>