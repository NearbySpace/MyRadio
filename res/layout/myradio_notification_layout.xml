<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="horizontal" 
    android:padding="4dp"
    android:gravity="center_vertical"
    android:background="#55000000">

    <ImageView
        android:id="@+id/myradio_notification_layout_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/app_logo" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:layout_marginLeft="10dp"  >

        <TextView
            android:id="@+id/myradio_notification_layout_contentTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="草莓电台"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/myradio_notification_layout_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"          
            android:ellipsize="end"
            android:singleLine="true"
            android:text="音乐"
            android:textSize="15sp" 
            android:textColor="@color/white"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/myradio_notification_layout_open"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/icon_notify_open"
        android:padding="3dp"
        android:clickable="true"
        android:layout_marginRight="5dp" />

    <ImageView
        android:id="@+id/myradio_notification_close"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="5dp"
        android:clickable="true"
        android:src="@drawable/icon_notify_close"
        android:layout_gravity="center_vertical" />

</LinearLayout>