<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/toolbar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <com.example.toolbar.pulltorefreshlistview.PullToRefreshListView
            xmlns:ptr="http://schemas.android.com/apk/res/com.example.strawberryradio"
            android:id="@+id/my_program_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:divider="#00000000"
            android:focusable="true"
            android:padding="10dp"
            android:scrollbars="@null"
            ptr:mode="both" />

        <com.example.toolbar.view.progress.CircularProgress
            xmlns:app="http://schemas.android.com/apk/res/com.example.strawberryradio"
            android:id="@+id/progress"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            app:borderWidth="3dp" />

    </RelativeLayout>

</LinearLayout>