<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/new_main_linearlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="@drawable/first_background"
    tools:context="com.example.toolbar.activity.NewMainActivity" >

    <android.support.v4.widget.DrawerLayout
        android:id="@+id/new_drawer"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        
        <android.support.v4.view.ViewPager
                android:id="@+id/new_main_pager"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >
            </android.support.v4.view.ViewPager>
            
        <LinearLayout
            android:id="@+id/new_drawer_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:background="@color/white"
            android:orientation="vertical" >
            <include layout="@layout/fragment_private_menu"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
    </android.support.v4.widget.DrawerLayout>

</LinearLayout>