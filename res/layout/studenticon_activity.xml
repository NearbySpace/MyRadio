<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/studenticon_activity_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <include layout="@layout/toolbar" />
    </RelativeLayout>

    <Button
        android:id="@+id/studenticon_activity_sure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/studenticon_activity_top"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/button"
        android:enabled="false"
        android:text="@string/ensure"
        android:textColor="@color/white" />
    
    

    <ImageView
        android:id="@+id/studenticon_activity_imageView1"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerInParent="true"
        android:src="@drawable/user_icon" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:paddingBottom="40dp" >

        <Button
            android:id="@+id/studenticon_activity_photo"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:background="@drawable/common_blue_selector"
            android:text="从相册选择"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/studenticon_activity_camera"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/common_blue_selector"
            android:text="相机"
            android:textColor="@color/white" />
    </LinearLayout>
    

</RelativeLayout>